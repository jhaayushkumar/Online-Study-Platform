# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/studyx
# OR use MongoDB Atlas:
# DATABASE_URL=mongodb+srv://<username>:<password>@cluster.mongodb.net/studyx

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure

# Cloudinary Configuration (for media storage)
# Sign up at https://cloudinary.com
CLOUD_NAME=your_cloudinary_cloud_name
API_KEY=your_cloudinary_api_key
API_SECRET=your_cloudinary_api_secret
FOLDER_NAME=StudyX

# Mail Configuration (Gmail with App Password)
# 1. Enable 2-Step Verification on your Google Account
# 2. Generate App Password: Google Account > Security > App passwords
# 3. Use the 16-character app password (no spaces)
MAIL_HOST=smtp.gmail.com
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_16_char_app_password

# Frontend URL (for password reset links, etc.)
FRONTEND_URL=http://localhost:5173

# Stripe Configuration (for payments)
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Admin Email (receives contact form notifications)
ADMIN_EMAIL=admin@yourdomain.com

# Google OAuth (optional - for Google login)
# Get from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id

# UPI Configuration (optional - for UPI payments)
UPI_ID=your_upi_id@bank
